<%- include('../partials/header') %>

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh;">
    <div class="container">
        <!-- Header Section -->
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="display-4 text-white fw-bold mb-2">üìö Book Collection</h1>
                        <p class="text-white fs-5">Explore our amazing library</p>
                    </div>
                    <a href="/" class="btn btn-light btn-lg" style="padding: 12px 30px; border-radius: 50px;">
                        <i class="bi bi-plus-circle"></i> Add New Book
                    </a>
                </div>
            </div>
        </div>

        <!-- Books Grid -->
        <% if(data.length === 0) { %>
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                        <div class="card-body text-center py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
                            <div style="font-size: 80px; margin-bottom: 20px;">üì≠</div>
                            <h4 class="mb-3 text-dark fw-bold">No Books Yet</h4>
                            <p class="text-muted mb-4">Start building your library by adding your first book!</p>
                            <a href="/" class="btn btn-primary btn-lg" style="border-radius: 50px; padding: 12px 40px;">
                                Add Your First Book
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% data.forEach((book) => { %>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card h-100 border-0 shadow" style="border-radius: 15px; overflow: hidden; transition: all 0.3s ease; cursor: pointer;"
                             onmouseover="this.style.transform='translateY(-15px)'; this.style.boxShadow='0 15px 40px rgba(0,0,0,0.2)';"
                             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 5px 15px rgba(0,0,0,0.1)';">

                            <!-- Book Image -->
                            <div style="height: 280px; overflow: hidden; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative;">
                                <img src="/<%= book.image %>"
                                     class="w-100 h-100"
                                     style="object-fit: cover; transition: transform 0.3s ease;"
                                     alt="<%= book.name %>"
                                     onmouseover="this.style.transform='scale(1.05)'"
                                     onmouseout="this.style.transform='scale(1)'">
                                <div style="position: absolute; top: 15px; right: 15px;">
                                    <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 8px 16px; border-radius: 20px; font-size: 14px;">
                                        üìñ Book
                                    </span>
                                </div>
                            </div>

                            <!-- Book Details -->
                            <div class="card-body d-flex flex-column" style="padding: 20px;">
                                <h5 class="card-title fw-bold text-dark" style="font-size: 18px; margin-bottom: 12px; line-height: 1.4;">
                                    <%= book.name %>
                                </h5>

                                <div style="margin-bottom: 15px;">
                                    <p class="mb-2">
                                        <span style="font-size: 13px; color: #666; font-weight: 600;">‚úçÔ∏è Author</span>
                                        <br>
                                        <span style="font-size: 14px; color: #333;"><%= book.author %></span>
                                    </p>
                                    <p class="mb-0">
                                        <span style="font-size: 13px; color: #666; font-weight: 600;">üè¢ Publisher</span>
                                        <br>
                                        <span style="font-size: 14px; color: #333;"><%= book.publisher %></span>
                                    </p>
                                </div>

                                <div style="border-top: 1px solid #eee; padding-top: 15px; margin-top: 15px;">
                                    <h4 style="color: #667eea; font-weight: bold; margin-bottom: 15px;">
                                        $<%= parseFloat(book.price).toFixed(2) %>
                                    </h4>
                                </div>

                                <!-- Action Buttons -->
                                <div class="mt-auto d-grid gap-2">
                                    <a href="/book/edit/<%= book._id %>" class="btn" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 12px; padding: 10px; font-weight: 600; transition: all 0.3s ease;"
                                       onmouseover="this.style.transform='scale(1.05)'"
                                       onmouseout="this.style.transform='scale(1)'">
                                        ‚úèÔ∏è Edit Book
                                    </a>
                                    <a href="/book/delete/<%= book._id %>" class="btn btn-outline-danger" style="border-radius: 12px; padding: 10px; font-weight: 600; border: 2px solid #dc3545; transition: all 0.3s ease;"
                                       onclick="return confirm('Are you sure you want to delete this book?');"
                                       onmouseover="this.style.background='#dc3545'; this.style.color='white'"
                                       onmouseout="this.style.background='transparent'; this.style.color='#dc3545'">
                                        üóëÔ∏è Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<style>
    body {
        font-family: 'Lato', sans-serif;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2) !important;
    }

    /* Scrollbar Design */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #5568d3 0%, #6a3f96 100%);
    }
</style>

<%- include('../partials/footer') %>
